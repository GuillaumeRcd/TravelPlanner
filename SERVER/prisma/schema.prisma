generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id       Int        @id @default(autoincrement())
  name     String
  user     String
  depCity  String
  arrCity  String
  budget   Float
  duration Int
  journeys Journey[]
  Activity Activity[]
}

model Journey {
  id            Int      @id @default(autoincrement())
  start         DateTime
  end           DateTime
  depCity       String
  arrCity       String
  price         Float
  transportType String
  trip          Trip     @relation(fields: [idTrip], references: [id])
  idTrip        Int //Es la primary key del trip
}

model Activity {
  id             Int      @id @default(autoincrement())
  start          DateTime
  end            DateTime
  depCity        String
  arrCity        String?
  price          Float
  activityType   String
  additionalInfo String?
  trip           Trip     @relation(fields: [idTrip], references: [id])
  idTrip         Int
}
